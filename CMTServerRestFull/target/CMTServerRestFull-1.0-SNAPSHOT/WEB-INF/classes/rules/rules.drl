package rules
import be.ac.vub.wise.cmtserver.facts.Person
import function be.ac.vub.wise.cmtserver.functions.Func2.samePerson
import be.ac.vub.wise.cmtserver.events.Test1
rule "ruleTest1" 
  when 
 $0:Person(name== "Sandra" , $00:name) 
 $2:Person(name== "Sandra" , $20:name) 
 eval(samePerson($00, $20)) 

 then 
insert( new Test1()); 
 end 
 
import be.ac.vub.wise.cmtserver.events.T2
import be.ac.vub.wise.cmtserver.facts.Person
import function be.ac.vub.wise.cmtserver.functions.Func2.samePerson
import be.ac.vub.wise.cmtserver.events.Test1
rule "ruleT2" 
  when 
 $0:Test1() 
$2:Person(name== "Sandra" , $20:name) 
 $4:Person(name== "Sandra" , $40:name) 
 eval(samePerson($20, $40)) 

 then 
T2 T2T2= new T2(); 
 T2T2.setName1( $2.name); 
insert(T2T2); 
 end 

