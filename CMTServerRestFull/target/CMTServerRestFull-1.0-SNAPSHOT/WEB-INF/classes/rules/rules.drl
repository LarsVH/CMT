package rules
import be.ac.vub.wise.cmtserver.facts.Person
import function be.ac.vub.wise.cmtserver.functions.Func.PersonInLocation
import be.ac.vub.wise.cmtserver.facts.Location
import be.ac.vub.wise.cmtserver.events.SandraInKitchen
rule "ruleSandraInKitchen" 
  when 
 $0:Location(room== "Kitchen" ) 
 $2:Person(name== "Sandra" ) 
 eval(PersonInLocation($0, $2)) 

 then 
SandraInKitchen SandraInKitchenSandraInKitchen= new SandraInKitchen(); 
 SandraInKitchenSandraInKitchen.setName1( $2.name); 
insert(SandraInKitchenSandraInKitchen); 
 end 

